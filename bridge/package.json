{
  "name": "firebase-watcher-service",
  "version": "1.0.0",
  "description": "TypeScript background service to watch Firebase Realtime Database changes",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "clean": "rm -rf dist",
    "create-topic": "ts-node scripts/create-topic.ts"
  },
  "keywords": ["firebase", "typescript", "watcher", "service"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "dotenv": "^16.3.1",
    "@hashgraph/sdk": "^2.69.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  }
}
